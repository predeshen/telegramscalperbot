[Unit]
Description=Multi-Crypto Swing Scanner (BTC, ETH - 15m/1h/4h/1d)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/telegramscalperbot
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ubuntu/telegramscalperbot/.env
ExecStart=/usr/bin/python3 /home/ubuntu/telegramscalperbot/main_multi_symbol.py --config /home/ubuntu/telegramscalperbot/config/multi_crypto_swing.json
Restart=always
RestartSec=10
StandardOutput=append:/home/ubuntu/telegramscalperbot/logs/multi_crypto_swing.log
StandardError=append:/home/ubuntu/telegramscalperbot/logs/multi_crypto_swing.log

[Install]
WantedBy=multi-user.target
