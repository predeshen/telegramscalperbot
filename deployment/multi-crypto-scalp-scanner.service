[Unit]
Description=Multi-Crypto Scalping Scanner (BTC, ETH, SOL - 1m/5m/15m)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/telegramscalperbot
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ubuntu/telegramscalperbot/.env
ExecStart=/usr/bin/python3 /home/ubuntu/telegramscalperbot/main_multi_symbol.py --config /home/ubuntu/telegramscalperbot/config/multi_crypto_scalp.json
Restart=always
RestartSec=10
StandardOutput=append:/home/ubuntu/telegramscalperbot/logs/multi_crypto_scalp.log
StandardError=append:/home/ubuntu/telegramscalperbot/logs/multi_crypto_scalp.log

[Install]
WantedBy=multi-user.target
