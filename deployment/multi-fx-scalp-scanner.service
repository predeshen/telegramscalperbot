[Unit]
Description=Multi-FX Scalping Scanner (EUR/USD, GBP/USD - 5m/15m/1h)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/telegramscalperbot
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ubuntu/telegramscalperbot/.env
ExecStart=/usr/bin/python3 /home/ubuntu/telegramscalperbot/main_multi_symbol.py --config /home/ubuntu/telegramscalperbot/config/multi_fx_scalp.json
Restart=always
RestartSec=10
StandardOutput=append:/home/ubuntu/telegramscalperbot/logs/multi_fx_scalp.log
StandardError=append:/home/ubuntu/telegramscalperbot/logs/multi_fx_scalp.log

[Install]
WantedBy=multi-user.target
