[Unit]
Description=Multi-Asset Mixed Scanner (BTC, ETH, EUR/USD - 15m/1h/4h)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/telegramscalperbot
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ubuntu/telegramscalperbot/.env
ExecStart=/usr/bin/python3 /home/ubuntu/telegramscalperbot/main_multi_symbol.py --config /home/ubuntu/telegramscalperbot/config/multi_mixed.json
Restart=always
RestartSec=10
StandardOutput=append:/home/ubuntu/telegramscalperbot/logs/multi_mixed.log
StandardError=append:/home/ubuntu/telegramscalperbot/logs/multi_mixed.log

[Install]
WantedBy=multi-user.target
